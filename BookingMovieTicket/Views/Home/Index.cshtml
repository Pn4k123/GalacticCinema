@using BookingMovieTicket.ViewModels
@{
    ViewData["Title"] = "Trang Chủ";
    Phim phim = ViewBag.tenPhim;
    Rap rap = ViewBag.tenRap;
}

<section class="mb-5">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner" style="border-radius: 10px;">
            <div class="carousel-item active">
                <img src="~/hinhanh/banner/2048-zalopay_1756202416336.png" class="d-block w-100" alt="">
            </div>
            <div class="carousel-item">
                <img src="~/hinhanh/banner/lio-t9-galaxy-banner-app-2048x682_1758894535113.jpg" class="d-block w-100" alt="">
            </div>
            <div class="carousel-item">
                <img src="~/hinhanh/banner/long-dien-huong-2048_1763019004777.jpg" class="d-block w-100" alt="">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<section class="mb-5 p-4 bg-light rounded shadow-sm">
    <h3 class="text-center fw-bold mb-4">MUA VÉ NHANH</h3>
    <form>
        <div class="row g-3 align-items-end">
            <div class="col-md-3">
                <select asp-for="@phim.TenPhim" asp-items="ViewBag.DSPhim" class="form-select" id="movieSelect" placeholder="Chọn phim">
                    <option selected="selected">Chọn phim</option>
                </select>
            </div>
            <div class="col-md-3">
                <select asp-for="@rap.TenRap" asp-items="ViewBag.DSRap" class="form-select" id="cinemaSelect">
                    <option selected="selected">Chọn rạp</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="dateSelect" class="form-label">Chọn Ngày</label>
                <input type="date" class="form-control" id="dateSelect">
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Mua Vé</button>
            </div>
        </div>
    </form>
</section>

<section class="mb-5">
    <ul class="nav nav-tabs nav-pills nav-fill mb-3" id="movieTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active fw-bold" id="dang-chieu-tab" data-bs-toggle="tab" data-bs-target="#dang-chieu" type="button" role="tab" aria-controls="dang-chieu" aria-selected="true">Phim Đang Chiếu</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link fw-bold" id="sap-chieu-tab" data-bs-toggle="tab" data-bs-target="#sap-chieu" type="button" role="tab" aria-controls="sap-chieu" aria-selected="false">Phim Sắp Chiếu</button>
        </li>
    </ul>

    <div class="tab-content" id="movieTabsContent">
        <div class="tab-pane fade show active" id="dang-chieu" role="tabpanel" aria-labelledby="dang-chieu-tab">
            <div class="row g-4">
                @await Component.InvokeAsync("Phim", new { trangthai = "dangchieu" })
                

            </div>
        </div>
        <div class="tab-pane fade" id="sap-chieu" role="tabpanel" aria-labelledby="sap-chieu-tab">
            <div class="row g-4">
                @await Component.InvokeAsync("Phim", new { trangthai = "sapchieu" })
        </div>
    </div>
    </div>
</section>

