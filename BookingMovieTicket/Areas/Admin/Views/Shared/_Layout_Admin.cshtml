<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Movie Management Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        body {
            font-family: "Inter", sans-serif;
        }

        .sidebar {
            width: 260px;
        }

            .sidebar a.active {
                background-color: #e9ecef;
                font-weight: 600;
            }
    </style>
</head>

<body class="bg-light text-dark">

    <div class="d-flex vh-100">

        <!-- Sidebar -->
        <aside class="sidebar bg-white border-end d-flex flex-column">

            <div class="p-4">
                <h1 class="h3 fw-bold text-dark">CINEMA</h1>
            </div>

            <nav class="flex-grow-1 px-3">
                <ul class="list-unstyled">

                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index"
                           class="d-flex align-items-center p-3 rounded text-dark text-decoration-none @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")">
                            <span class="material-icons me-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "text-primary" : "text-secondary")">home</span>
                            Trang chủ
                        </a>
                    </li>

                    <li class="mb-2">
                        <a asp-area="Admin" asp-controller="QuanLyPhim" asp-action="Index"
                           class="d-flex align-items-center p-3 rounded text-dark text-decoration-none @(ViewContext.RouteData.Values["controller"]?.ToString() == "QuanLyPhim" ? "active" : "")">
                            <span class="material-icons me-3 @(ViewContext.RouteData.Values["controller"]?.ToString() == "QuanLyPhim" ? "text-primary" : "text-secondary")">theaters</span>
                            Quản lý Phim
                        </a>
                    </li>

                    <li class="mb-2">
                        <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                            <span class="material-icons me-3 text-secondary">movie</span>
                            Quản lý Rạp
                        </a>
                    </li>

                    <li class="mb-2">
                        <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                            <span class="material-icons me-3 text-secondary">schedule</span>
                            Quản lý Suất chiếu
                        </a>
                    </li>

                    <li class="mb-2">
                        <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                            <span class="material-icons me-3 text-secondary">meeting_room</span>
                            Quản lý Phòng
                        </a>
                    </li>

                    <li class="mb-2">
                        <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                            <span class="material-icons me-3 text-secondary">chair</span>
                            Quản lý Ghế
                        </a>
                    </li>

                    <li class="mb-2">
                        <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                            <span class="material-icons me-3 text-secondary">bar_chart</span>
                            Thống kê doanh thu
                        </a>
                    </li>

                    <li class="mb-2">
                        <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                            <span class="material-icons me-3 text-secondary">people</span>
                            Quản lý tài khoản
                        </a>
                    </li>

                </ul>
            </nav>

            <div class="border-top mt-auto p-3">
                <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                    <span class="material-icons me-3 text-secondary">login</span>
                    Đăng nhập
                </a>

                <a class="d-flex align-items-center p-3 rounded text-dark text-decoration-none hover:bg-light">
                    <span class="material-icons me-3 text-secondary">person_add</span>
                    Đăng xuất
                </a>
            </div>

        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 overflow-auto">
            @RenderBody()
        </main>

    </div>

</body>
</html>
