@model BookingMovieTicket.Models.Phim
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
}
<header class="bg-white border-bottom p-4 d-flex justify-content-between align-items-center">
    <div>
        <h2 class="h2 fw-bold text-dark">Danh sách Phim</h2>
    </div>
    <div class="d-flex align-items-center gap-3">
        <a asp-action="them" class="btn btn-primary d-flex align-items-center">
            <span class="material-icons me-2">add</span>
            Thêm Phim Mới
        </a>
    </div>
</header>

<div class="flex-grow-1 overflow-auto p-4">
    <div class="bg-white rounded shadow-sm overflow-hidden">

        <table class="table table-bordered align-middle text-nowrap">
            <thead class="table-light">
                <tr>
                    <th><label asp-for="MaPhim" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="TenPhim" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="MoTa" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="ThoiLuong" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="DaoDien" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="DanhGia" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="NgayPhatHanh" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="Trailer" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th><label asp-for="Poster" class="text-muted small text-uppercase fw-semibold"></label></th>
                    <th class="text-muted small text-uppercase fw-semibold">Tác vụ</th>
                </tr>
            </thead>

            <tbody>
                @{
                    foreach (var item in ViewBag.qlp)
                    {
                        <tr>
                            <td class="fw-semibold">@item.MaPhim</td>
                            <td class="fw-semibold">@item.TenPhim</td>
                            <td class="text-muted text-truncate" style="max-width: 200px;">@item.MoTa</td>
                            <td>@item.ThoiLuong phút</td>
                            <td>@item.DaoDien</td>
                            <td>@item.DanhGia</td>
                            <td>@item.NgayPhatHanh.ToShortDateString()</td>
                            <td><a href="@item.Trailer" class="text-primary text-decoration-underline">@item.Trailer</a></td>
                            <td><img class="img-thumbnail" style="height: 96px; width: auto;" src="@item.Poster" /></td>

                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="sua" asp-route-id="@item.MaPhim" class="btn btn-success btn-sm">
                                        Sửa
                                    </a>
                                    <a asp-action="xoa" asp-route-id="@item.MaPhim" class="btn btn-danger btn-sm">
                                        Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
